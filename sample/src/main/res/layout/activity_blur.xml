<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.sample.activity.BlurActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/blur" />

    <ImageView
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x400"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/round" />

    <ImageView
        android:id="@+id/smallImageView"
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x320"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/blur" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/y100" />

</FrameLayout>
